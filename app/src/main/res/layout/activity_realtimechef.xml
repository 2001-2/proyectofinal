<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo32"
    tools:context=".realtimechef">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblCielo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Cliente:"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblCielo0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_toRightOf="@id/lblCielo0"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/lblTemperatura1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblCielo0"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:text="Orden:"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblTemperatura0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/lblCielo0"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/lblTemperatura1"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/lblHumedad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/lblTemperatura1"
            android:layout_marginTop="5dp"
            android:text="Precio:"

            android:textSize="24sp" />

        <TextView
            android:id="@+id/lblHumedad0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_below="@id/lblTemperatura1"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/lblHumedad1"

            android:textSize="16sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>